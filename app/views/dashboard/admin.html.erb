<div class="newBook">
  <div class="small-3 columns" name="new" id="book">
  <%= form_for @book, :url => url_for(:controller => 'dashboard', :action => 'create') do |f| %>
    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :genre %><br>
      <%= f.text_field :genre %>
    </p>

    <p>
      <%= f.label :good_reads_id %><br>
      <%= f.text_field :good_reads_id %>
    </p>
   
    <p>
      <button class = "button">Create</button>
    </p>
  <% end %>
  </div>
</div>  

